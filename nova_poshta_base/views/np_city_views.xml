<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <act_window id="action_nova_poshta_city_tree"
  		name="Cities"
  		res_model="nova.poshta.city"
  		view_mode="tree,form" />

    <menuitem id="menu_nova_poshta_city"
  		name="Cities"
        parent="menu_nova_poshta_catalog"
  		sequence="30"
        action="action_nova_poshta_city_tree"/>

    <record id="nova_poshta_city_view_form" model="ir.ui.view">
        <field name="name">nova.poshta.city.view.form</field>
        <field name="model">nova.poshta.city</field>
        <field name="arch" type="xml">
            <form edit="false" create="false">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h3><field name="name" placeholder="City Name"/></h3>
                    </div>
                    <group>
                        <group>
                            <field name="name_ru" />
                            <field name="code" />
                            <field name="area" />
                            <field name="area_id" />
                            <field name="settlement_type" />
                            <field name="settlement_type_description" />
                            <field name="settlement_type_description_ru" />
                        </group>
                        <group string="Delivery Days" name="delivery">
                            <field name="delivery_1" />
                            <field name="delivery_2" />
                            <field name="delivery_3" />
                            <field name="delivery_4" />
                            <field name="delivery_5" />
                            <field name="delivery_6" />
                            <field name="delivery_7" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nova_poshta_city_view_tree" model="ir.ui.view">
        <field name="name">nova.poshta.city.view.tree</field>
        <field name="model">nova.poshta.city</field>
        <field name="arch" type="xml">
            <tree edit="false" create="false">
                <field name="code"/>
                <field name="settlement_type_description" string="Type"/>
                <field name="name"/>
                <field name="area_id"/>
                <field name="delivery_1" string="Mon"/>
                <field name="delivery_2" string="Tu"/>
                <field name="delivery_3" string="Wed"/>
                <field name="delivery_4" string="Th"/>
                <field name="delivery_5" string="Fri"/>
                <field name="delivery_6" string="Sat"/>
                <field name="delivery_7" string="Sun"/>
                <field name="write_date" string="Updated"/>
            </tree>
        </field>
    </record>

    <record id="nova_poshta_city_view_search" model="ir.ui.view">
        <field name="name">nova.poshta.city.view.search</field>
        <field name="model">nova.poshta.city</field>
        <field name="arch" type="xml">
            <search string="Search Cities">
                <field name="name" string="Name" filter_domain="['|',('name','ilike',self),('name_ru','ilike',self)]"/>
                <separator/>
                <filter string="Works on Weekend" name="weekend_delivery"
                    domain="['|',('delivery_6','=',True),('delivery_7','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_type" string="Type" context="{'group_by':'settlement_type_description'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
